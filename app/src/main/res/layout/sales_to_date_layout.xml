<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:codePan="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlHeaderSalesToDate"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header"
        android:background="@color/header">

        <FrameLayout
            android:id="@+id/flBackSalesToDate"
            android:layout_width="@dimen/header"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:layout_width="@dimen/ten"
                android:layout_height="@dimen/nine"
                android:layout_gravity="center"
                android:src="@drawable/ic_back"/>

            <com.codepan.widget.CodePanButton
                android:id="@+id/btnBackSalesToDate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/state_rect_trans_dark"/>

        </FrameLayout>

        <com.codepan.widget.CodePanLabel
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/daily_report"
            android:textColor="@color/white"
            android:textSize="@dimen/ten"
            codePan:typeface="@string/helvetica_neue_light"/>

        <FrameLayout
            android:id="@+id/flCalendarSalesToDate"
            android:layout_width="@dimen/header"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <ImageView
                android:layout_width="@dimen/ten"
                android:layout_height="@dimen/ten"
                android:layout_gravity="center"
                android:src="@drawable/ic_calendar"/>

            <com.codepan.widget.CodePanButton
                android:id="@+id/btnCalendarSalesToDate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/state_rect_trans_dark"/>

        </FrameLayout>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/flGraphSalesToDate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/five"/>

</LinearLayout>