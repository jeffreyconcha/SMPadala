<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:codePan="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dialog_bg"
    android:clickable="true"
    android:padding="@dimen/nine">

    <LinearLayout
        android:layout_width="@dimen/two_hundred_fifty"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_rect_white_rad_five"
        android:orientation="vertical"
        android:padding="@dimen/ten">

        <com.codepan.widget.CodePanLabel
            android:id="@+id/tvTitleAddCustomer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/add_customer"
            android:textColor="@color/theme_pri"
            android:textSize="@dimen/ten"
            codePan:typeface="@string/dialog_title_font"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rlPhotoAddCustomer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/five">

                <FrameLayout
                    android:layout_width="@dimen/fifty"
                    android:layout_height="@dimen/fifty"
                    android:layout_centerVertical="true">

                    <ImageView
                        android:id="@+id/ivPhotoAddCustomer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_camera"/>

                    <com.codepan.widget.CodePanButton
                        android:id="@+id/btnPhotoAddCustomer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/state_rect_trans_dark"/>

                </FrameLayout>

            </RelativeLayout>

            <com.codepan.widget.CodePanLabel
                android:id="@+id/tvViewPhotoAddCustomer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@+id/rlPhotoAddCustomer"
                android:text="@string/view_photo"
                android:textColor="@color/theme_sec"
                android:textSize="@dimen/nine"
                android:padding="@dimen/five"
                codePan:typeface="@string/helvetica_neue_light"/>

        </RelativeLayout>

        <com.codepan.widget.CodePanLabel
            android:id="@+id/tvNameTitleAddCustomer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/five"
            android:text="@string/name"
            android:textColor="@color/gray_pri"
            android:textSize="@dimen/nine"
            codePan:typeface="@string/helvetica_neue_light"/>

        <com.codepan.widget.CodePanTextField
            android:id="@+id/etNameAddCustomer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/state_rect_gray_qui_rad_one"
            android:imeOptions="actionNext"
            android:inputType="textCapWords"
            android:maxLines="1"
            android:padding="@dimen/five"
            android:singleLine="true"
            android:textColor="@color/gray_pri"
            android:textSize="@dimen/nine"
            codePan:typeface="@string/helvetica_neue_light"/>

        <com.codepan.widget.CodePanLabel
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/five"
            android:text="@string/mobile"
            android:textColor="@color/gray_pri"
            android:textSize="@dimen/nine"
            codePan:typeface="@string/helvetica_neue_light"/>

        <com.codepan.widget.CodePanTextField
            android:id="@+id/etMobileNoAddCustomer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/state_rect_gray_qui_rad_one"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="11"
            android:maxLines="1"
            android:padding="@dimen/five"
            android:singleLine="true"
            android:textColor="@color/gray_pri"
            android:textSize="@dimen/nine"
            codePan:typeface="@string/helvetica_neue_light"/>

        <com.codepan.widget.CodePanLabel
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/five"
            android:text="@string/address"
            android:textColor="@color/gray_pri"
            android:textSize="@dimen/nine"
            codePan:typeface="@string/helvetica_neue_light"/>

        <com.codepan.widget.CodePanTextField
            android:id="@+id/etAddressAddCustomer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/state_rect_gray_qui_rad_one"
            android:gravity="start|top"
            android:imeOptions="actionDone"
            android:inputType="textCapWords"
            android:minHeight="@dimen/fifty"
            android:padding="@dimen/five"
            android:textColor="@color/gray_pri"
            android:textSize="@dimen/nine"
            codePan:typeface="@string/helvetica_neue_light"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/ten"
            android:orientation="horizontal">

            <com.codepan.widget.CodePanButton
                android:id="@+id/btnCancelAddCustomer"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/state_rect_gray_qua_rad_three"
                android:minWidth="@dimen/sixty"
                android:paddingBottom="@dimen/five"
                android:paddingLeft="@dimen/three"
                android:paddingRight="@dimen/three"
                android:paddingTop="@dimen/five"
                android:text="@string/cancel"
                android:textColor="@color/white"
                android:textSize="@dimen/nine"
                android:visibility="visible"
                codePan:typeface="@string/helvetica_neue_mid"/>

            <com.codepan.widget.CodePanButton
                android:id="@+id/btnSaveAddCustomer"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/three"
                android:layout_marginStart="@dimen/three"
                android:background="@drawable/state_rect_theme_sec_rad_three"
                android:minWidth="@dimen/sixty"
                android:paddingBottom="@dimen/five"
                android:paddingLeft="@dimen/three"
                android:paddingRight="@dimen/three"
                android:paddingTop="@dimen/five"
                android:text="@string/save"
                android:textColor="@color/white"
                android:textSize="@dimen/nine"
                codePan:typeface="@string/helvetica_neue_mid"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>