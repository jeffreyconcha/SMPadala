<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:codePan="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlAlertToast"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/one_hundred"
    android:paddingRight="@dimen/one_hundred">

    <com.codepan.widget.CodePanLabel
        android:id="@+id/tvMessageAlertToast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/toast_background"
        android:gravity="center"
        android:padding="@dimen/seven"
        android:text="Toast message"
        android:textColor="@color/white"
        android:textSize="@dimen/ten"
        codePan:typeface="@string/helvetica_neue_light"/>

</RelativeLayout>
