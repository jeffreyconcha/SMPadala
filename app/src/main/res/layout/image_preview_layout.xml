<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <com.codepan.widget.TouchImageView
        android:id="@+id/ivImagePreview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"/>

    <FrameLayout
        android:layout_width="@dimen/twenty_three"
        android:layout_height="@dimen/twenty_three"
        android:layout_margin="@dimen/five">

        <ImageView
            android:layout_width="@dimen/nine"
            android:layout_height="@dimen/eight"
            android:layout_gravity="center"
            android:src="@drawable/ic_back"/>

        <com.codepan.widget.CodePanButton
            android:id="@+id/btnBackImagePreview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/state_oval_trans_light"/>

    </FrameLayout>

</RelativeLayout>